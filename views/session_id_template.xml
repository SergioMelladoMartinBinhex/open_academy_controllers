<odoo>
    <data>
        <template id="session_id_template" name="Session">
            <t t-call="website.layout">
                <div class="container">
                    <ol class="o_portal_submenu breadcrumb mb-0 py-2 flex-grow-1 row">
                        <li><a href="/my/home"><i class="fa fa-home"></i></a></li>
                        <li><a href="/courses">/ Courses</a></li>
                        <li><a t-att-href="'/course/' + str(session.course.id)">/ <t t-esc="session.course.title"/></a></li>
                        <li class="active">/ <t t-esc="session.name"/></li>
                    </ol>
                </div>
                <div class="container mt-2">
                    <div class="row">
                        <div class="col-md-12">
                            <h1><t t-esc="session.name"/></h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p><a t-att-href="'/course/' + str(session.course.id)"><t t-esc="session.course.title"/></a></p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Start Date</h4>
                                </div>
                                <div class="card-body">
                                    <p><t t-esc="session.initial_date"/></p>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h4>Duration</h4>
                                </div>
                                <div class="card-body">
                                    <p><t t-esc="session.duration"/> days</p>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h4>Ocuppation</h4>
                                </div>
                                <div class="card-body">
                                    <p><t t-esc="round(session.taken_seats, 2)"/>%</p>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h4>Instructor</h4>
                                </div>
                                <div class="card-body">
                                    <p><t t-esc="session.instructor.name"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer small text-center text-muted border-top-0 pt-1 pb-1 d-none d-lg-block" data-oe-model="ir.ui.view" data-oe-id="463" data-oe-field="arch" data-oe-xpath="/t[1]/div[1]/div[1]/div[2]">
                        Con tecnolog√≠a de <a target="_blank" href="http://www.odoo.com?utm_source=db&amp;utm_medium=portal" title="odoo"><img src="/web/static/src/img/logo.png" alt="Logo de Odoo" height="15" loading="lazy" style=""/></a>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <t t-if="session.attendees_count != session.number_of_seats">
                                <t t-if="not joined">
                                    <div class="d-flex justify-content-center">
                                        <div class="d-inline-block mx-2">
                                            <a class="btn btn-primary btn-block" type="button" t-att-href="'/join/' + str(session.id) + '/congrats'">Join to the session</a>
                                        </div> 
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="d-flex justify-content-center">
                                        <div class="d-inline-block mx-2">
                                            <a class="btn btn-danger btn-block" type="button" t-att-href="'/leave/' + str(session.id) + '/course'">Leave the session</a>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="">
                                <div class="d-flex justify-content-center">
                                    <div class="d-inline-block mx-2">
                                        <p class="text-danger">The session is full</p>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>         
</odoo>