<odoo>
    <data>
        <template id="sessions_template" name="Sessions">
            <t t-call="website.layout">
                <div class="container mt-2">
                    <div class="container">
                        <ol class="o_portal_submenu breadcrumb mb-0 py-2 flex-grow-1 row">
                            <li><a href="/my/home"><i class="fa fa-home"></i></a></li>
                            <li class="active">/ My sessions</li>
                        </ol>
                    </div>
                    <div class="container mt-2">
                        <h3>My Sessions</h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Course</th>
                                    <th>Start Date</th>
                                    <th>Duration</th>
                                    <th>Seats</th>
                                    <th>Leave</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="session" t-as="s">
                                    <tr>
                                        <td>
                                            <a t-att-href="'/session/' + str(s.id)">
                                                <t t-esc="s.name"/>
                                            </a>
                                        </td>
                                        <td>
                                            <a t-att-href="'/course/' + str(s.course.id)">
                                                <t t-esc="s.course.title"/>
                                            </a>
                                        </td>
                                        <td><t t-esc="s.initial_date"/></td>
                                        <td><t t-esc="s.duration"/> days</td>
                                        <td><t t-esc="s.number_of_seats"/></td>
                                        <td>
                                            <a t-att-href="'/leave/' + str(s.id) + '/sessions'" class="btn btn-danger">X</a>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="card-footer small text-center text-muted border-top-0 pt-1 pb-1 d-none d-lg-block" data-oe-model="ir.ui.view" data-oe-id="463" data-oe-field="arch" data-oe-xpath="/t[1]/div[1]/div[1]/div[2]">
                            Con tecnolog√≠a de <a target="_blank" href="http://www.odoo.com?utm_source=db&amp;utm_medium=portal" title="odoo"><img src="/web/static/src/img/logo.png" alt="Logo de Odoo" height="15" loading="lazy" style=""/></a>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="sessions_menu" inherit_id="portal.portal_my_home">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
                <div class="container mt-5">
                    <h3>Open Academy</h3>
                    <a href="/sessions" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">My Sessions
                        <span class="badge badge-primary badge-pill"><t t-esc="num_sessions"/></span>
                    </a>
                </div>
            </xpath>
        </template>
    </data>
</odoo>